<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>BlogControl</servlet-name>
        <servlet-class>controller.BlogControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterCustomerController</servlet-name>
        <servlet-class>controller.RegisterCustomerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterVerify</servlet-name>
        <servlet-class>controller.RegisterVerify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterVerifyCode</servlet-name>
        <servlet-class>controller.RegisterVerifyCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePass</servlet-name>
        <servlet-class>controller.ChangePass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogControl</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterCustomerController</servlet-name>
        <url-pattern>/RegisterCustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterVerify</servlet-name>
        <url-pattern>/RegisterVerify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterVerifyCode</servlet-name>
        <url-pattern>/RegisterVerifyCode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePass</servlet-name>
        <url-pattern>/ChangePass</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
